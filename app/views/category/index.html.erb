<!-- app/views/category/index.html.erb -->
<div class="p-4 md:p-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-2xl md:text-3xl font-bold mb-2">تصفح التصنيفات</h1>
    <p class="text-gray-400">اختر من التصنيفات المختلفة للعلوم الشرعية</p>
  </div>

  <!-- Categories Grid -->
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @categories.each do |category| %>
      <%= link_to category_path(id: category[:id]) do %>
        <div class="relative overflow-hidden rounded-lg aspect-square <%= category[:color] %> hover:scale-105 transition-transform cursor-pointer group">
          <div class="absolute inset-0 bg-black bg-opacity-20"></div>
          <div class="absolute bottom-4 right-4">
            <h3 class="text-white text-lg font-bold text-right"><%= category[:name] %></h3>
          </div>
          <div class="absolute top-4 left-4 opacity-30">
            <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
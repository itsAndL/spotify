<!-- app/views/category/show.html.erb -->
<div class="p-4 md:p-8">
  <!-- Category Header -->
  <div class="relative mb-8 rounded-lg overflow-hidden <%= @category[:color] %> p-8">
    <div class="relative z-10">
      <h1 class="text-3xl md:text-5xl font-bold mb-4 text-white text-right"><%= @category[:name] %></h1>
      <p class="text-gray-200 text-lg text-right"><%= @category[:description] %></p>
    </div>
    <div class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-20"></div>
  </div>

  <!-- Playlists Section -->
  <div class="mb-8">
    <h2 class="text-xl font-bold mb-4">قوائم التشغيل المتاحة</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
      <% @playlists.each do |playlist| %>
        <%= link_to playlist_path(id: playlist[:id]) do %>
          <div class="bg-gray-900 hover:bg-gray-800 rounded-lg p-4 transition-colors cursor-pointer group">
            <div class="relative mb-4">
              <img src="<%= playlist[:image] %>" alt="<%= playlist[:title] %>" class="w-full aspect-square rounded-lg shadow-lg">
              <button class="absolute bottom-2 left-2 p-2 bg-green-500 hover:bg-green-400 text-black rounded-full opacity-0 group-hover:opacity-100 transition-opacity">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4">
                  <path fill-rule="evenodd" d="M4.5 5.653c0-1.427 1.529-2.33 2.779-1.643l11.54 6.347c1.295.712 1.295 2.573 0 3.286L7.28 19.99c-1.25.687-2.779-.217-2.779-1.643V5.653Z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
            <h3 class="font-semibold text-white truncate mb-1 text-right"><%= playlist[:title] %></h3>
            <p class="text-sm text-gray-400 line-clamp-2 text-right"><%= playlist[:subtitle] %></p>
            <p class="text-xs text-gray-500 mt-1 text-right"><%= playlist[:lectures_count] %> محاضرة</p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>